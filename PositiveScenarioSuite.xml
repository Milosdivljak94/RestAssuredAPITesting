<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="PositiveTestsSuite">

  <test name="Create new user">
  
    <classes>
      <class name="APITests">
       <methods>
          <include name="createNewUser"/>
        </methods>
      </class>
    </classes>
    
  </test>
  
  <test name="Update user details">
  
    <classes>
      <class name="APITests">
       <methods>
          <include name="updateUser"/>
        </methods>
      </class>
    </classes>
    
  </test>
  
    <test name="Delete user">
  
    <classes>
      <class name="APITests">
       <methods>
          <include name="deleteUser"/>
        </methods>
      </class>
    </classes>
    
  </test>
  
</suite>



